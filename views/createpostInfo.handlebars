<div class="container">
      <div class="col-sm-12 col-sm-offset-3">
            <section class="body">
                  <form id="postingForm" action="api/postInfo" method="post">
                        <div class="new-form" id="new-edit">
                              <link type="text/css" rel="stylesheet" media="all" href="//www.craigslist.org/styles/JSONForm.css?v=6bb7678de82b3f8bed79728cb8732c0a">
                              <link type="text/css" rel="stylesheet" media="all" href="//www.craigslist.org/styles/posting-process-edit.css?v=79b2408651780363385208f0cc2099f0">
                              <div class="json-form">
                                    <fieldset class="json-form-group-container posting-attributes">
                                          <legend>posting details</legend>
                                          <div class="form-row">
                                                <div class="col-md-4 mb-3">
                                                      <label>posting title</label>
                                                      <input type="text" class="form-control is-valid" required>
                                                </div>
                                                <div class="col-md-3 mb-3">
                                                      <label>posting price</label>
                                                      <div class="input-group mb-3">
                                                            <div class="input-group-prepend">
                                                                  <span class="input-group-text">$</span>
                                                            </div>
                                                            <input type="text" class="form-control is-valid" name="priceNam"
                                                                  value="" aria-label="Amount (to the nearest dollar)">
                                                            <div class="input-group-append">
                                                                  <span class="input-group-text">.00</span>
                                                            </div>
                                                      </div>
                                                </div>
                                                <div class="col-md-3 mb-3">
                                                      <label>condition</label>
                                                      <div class="col-auto my-1">
                                                            <select class="custom-select mr-sm-2" id="inlineFormCustomSelect">
                                                                  <option selected>new</option>
                                                                  <option value="1">90% new</option>
                                                                  <option value="2">70% new</option>
                                                                  <option value="3">50% new</option>
                                                                  <option value="4">old</option>
                                                            </select>
                                                      </div>
                                                </div>
                                                <div class="col-mb-3 mb-3 input-group ">
                                                      <div class="input-group-prepend">
                                                            <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
                                                      </div>
                                                      <div class="custom-file">
                                                            <input type="file" class="custom-file-input" id="inputGroupFile01"
                                                                  aria-describedby="inputGroupFileAddon01">
                                                            <label class="custom-file-label" for="inputGroupFile01">Choose
                                                                  file</label>
                                                      </div>
                                                </div>
                                          </div>
                                    </fieldset>
                                    <fieldset class="json-form-group-container contact-info">
                                          <legend>contact info</legend>
                                          <div class="form-row">
                                                <div class="col-md-3 mb-3">
                                                      <label>contact name</label>
                                                      <input type="text" class="form-control">
                                                </div>
                                                <div class="col-md-3 mb-3">
                                                      <label>email</label>
                                                      <input type="text" class="form-control" placeholder="jason@gmail.com">
                                                </div>
                                                <div class="col-md-3 mb-3">
                                                      <label>phone number</label>
                                                      <input type="text" class="form-control is-valid" placeholder="425-6666-2231"
                                                            required>
                                                      {{!-- <div class="invalid-feedback">
                                                            Please provide a valid zip.
                                                      </div> --}}
                                                </div>
                                          </div>
                                          <div class="form-row">
                                                <div class="col-md-3 mb-3">
                                                      <label>contact medium</label>
                                                      <input type="text" class="form-control">
                                                </div>
                                                <div class="col-md-3 mb-3">
                                                      <label>language</label>
                                                      <div class="col-auto my-1">
                                                            <select class="custom-select mr-sm-2" id="inlineFormCustomSelect">
                                                                  <option selected>English</option>
                                                                  <option value="1">Spanish</option>
                                                                  <option value="2">Chinese</option>
                                                                  <option value="3">Japanese</option>
                                                            </select>
                                                      </div>
                                                </div>
                                          </div>
                                    </fieldset>
                                    <fieldset class="json-form-group-container location-info">
                                          <legend>location info</legend>
                                          <div class="form-row">
                                                <div class="col-md-6 mb-3">
                                                      <label>Street</label>
                                                      <input type="text" class="form-control is-valid" required>
                                                      {{!-- <div class="valid-feedback">
                                                            Looks good!
                                                      </div> --}}
                                                </div>
                                          </div>
                                          <div class="form-row">
                                                <div class="col-md-4 mb-3">
                                                      <label>City</label>
                                                      <input type="text" class="form-control is-valid">
                                                      {{!-- <div class="invalid-feedback">
                                                            Please provide a valid city.
                                                      </div> --}}
                                                </div>
                                                <div class="col-md-3 mb-3">
                                                      <label for="validationServer04">State</label>
                                                      <input type="text" class="form-control is-valid" placeholder="State"
                                                            required>
                                                      {{!-- <div class="invalid-feedback">
                                                            Please provide a valid state.
                                                      </div> --}}
                                                </div>
                                                <div class="col-md-3 mb-3">
                                                      <label for="validationServer05">Zip</label>
                                                      <input type="text" class="form-control is-valid" placeholder="Zip"
                                                            required>
                                                      <div class="invalid-feedback">
                                                            Please provide a valid zip.
                                                      </div>
                                                </div>
                                          </div>
                                    </fieldset>
                                    <div class="json-form-group json-form-group-container submit-buttons">
                                          <div class="submit_button">
                                                <button type="submit" name="go" value="continue" class="go big-button submit-button"
                                                      tabindex="1">submit</button>
                                          </div>
                                    </div>
                              </div>
                        </div>
                  </form>
            </section>
      </div>
</div>

